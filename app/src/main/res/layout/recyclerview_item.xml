<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/recycler_iv_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/recycler_tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recycler_iv_item"
        android:text="hello"
        android:layout_marginLeft="20dp"/>


    <com.jmf.addsubutils.AddSubUtils
        android:id="@+id/recycler_item_utils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true">

    </com.jmf.addsubutils.AddSubUtils>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/addsubutils_text"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>